@model IEnumerable<EntityFrameworkExample.Models.Barrel>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    @using (Html.BeginForm("DeleteSelected", "Barrel", FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-8">
            </div>
                </p>
                    <input type="submit" value="Delete Selected Barrels" onclick="return confirm('Are you sure you wish to delete selected Barrels?');" class="btn btn-danger" />
                <p>
            <div class="col-sm-4">
            </div>
                <h2>Barrels</h2>
        </div>
        <div class="col-sm-2">
            <button onclick="window.location.href = '/Barrel/Create';" class="create-button">Create</button>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table">
                    <tr>
                        <th>
                            
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentLocation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contents)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="ids" value="@item.Id" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contents)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    }
</div>



