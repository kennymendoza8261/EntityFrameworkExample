@model IEnumerable<EntityFrameworkExample.Models.Cube>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <button id="create" class="create-button" onclick="location.href='@Url.Action("Create", "Cube")'">Create</button>
    <form method="post" action="Cube/DeleteSelected">
        <div class="row">
            <div class="col-sm-8">
                <h2>Cubes</h2>
            </div>
            <div class="col-sm-4">
                <p>
                    <input type="submit" value="Delete Selected Cubes" onclick="return confirm('Are you sure you wish to delete selected Cubes?');" class="button-danger" />
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <table class="table">
                    <tr>
                        <th>

                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentLocation)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contents)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="ids" value="@item.Id" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentLocation)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contents)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </form>
</div>



